<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Epicture"
             x:Class="Epicture.Views.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout x:Name="SelectHost">
            <Label FontAttributes="Bold" FontSize="30">On Wich Provider would you like to connect ?</Label>
            <Button FontSize="20" Text="ImgUr" Clicked="LogToImgUrOnClicked"></Button>
            <Button FontSize="20" Text="Flickr"></Button>
        </StackLayout>

        <StackLayout x:Name="ImgUrLogin" IsVisible="False">
            <Label FontAttributes="Bold" FontSize="30">Log in to ImgUr</Label>
            <Entry FontSize="20" Placeholder="Token"></Entry>
            <Button FontSize="20" Text="Log In" Clicked="ButtonImgurLoginOnClicked"></Button>
            <Button Text="Get a new Token" Clicked="GeTokenOnClicked"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
